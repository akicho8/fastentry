<section class="section">
  <div class="container">
    <table class="table is-hoverable is-fullwidth">
      <thead>
        <tr>
          <th>Key</th>
          <th>Value</th>
          <th>Expires at</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @cached.each do |cache| %>
          <tr>
            <td><%= cache[:cache_key] %></td>
            <td><%= link_to cache[:cache_value], cache_path(cache[:cache_key]) %></td>
            <td><%= cache[:expiration] %></td>
            <td><%= link_to "Invalidate", invalidate_key_path(cache[:cache_key]), method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger is-small is-outlined" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>